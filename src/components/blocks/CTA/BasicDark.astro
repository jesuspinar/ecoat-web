// Description: A centered call to action section that contains: a title, text, background image, notification and a button.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import CTA from '../../ui/CTA.astro'
import Button from '../../ui/Button.astro'
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Highlight from '../../ui/Highlight.astro'

// Content
import ctaImage from '../../../assets/cta.webp'
import badge from '../../../assets/badge.svg'
---

<Section>
	<Row>
		<Col span="1" />
		<Col span="10">
			<CTA
				title="Únete +100 Usuarios Satisfechos!"
				text="Descubre por qué miles de profesionales confían en nuestra asesoría para agilizar sus tramites y mejorar su negocio. Empieza hoy mismo y comprueba la diferencia!"
				mode="dark"
				bg={ctaImage}
			>
				<ChipNotification radius="rounded-full" classes="mb-6 box">
					<Image src={badge} alt="Asesoria en Denia" class="h-12 w-12" slot="button" />
					#1 Asesoria en <Highlight classes="ml-2">Denia</Highlight>
				</ChipNotification>
				<Button size="lg" style="primary" link="https://goo.gl/maps/NqRwCXWdAYuHEcUb9"> Contactar</Button>
			</CTA>
			<Col span="1" />
		</Col>
	</Row>
</Section>
