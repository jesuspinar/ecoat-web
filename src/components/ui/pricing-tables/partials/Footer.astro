// ------------
// Description:  The footer area of the pricing table
// Properties:
// - classes: Additional classes to be added to the text field
// - type: The type of the pricing table (basic, featured)

// Props
type Props = {
	type?: 'basic' | 'featured'
	classes?: string
}
const { classes, type } = Astro.props
---

<footer
	class:list={[
		'pricing__footer',
		{ [` pricing__footer--${type}`]: type },
		{ [`${classes}`]: classes }
	]}
>
	<slot />
</footer>

<style>
	.pricing__footer {
		@apply border-t p-6 text-center text-sm;
	}
	.pricing__footer--basic {
		@apply border-secondary-100 bg-secondary-50/50 dark:border-secondary-800 dark:bg-secondary-800/50;
	}
	.pricing__footer--featured {
		@apply border-primary-700 bg-primary-700/50;
	}
</style>
